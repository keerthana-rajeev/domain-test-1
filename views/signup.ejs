<%- include("header") -%>
<body>
    <div class="container container1">
        <h3>Welcome To Domain Test</h3><br>
        <form method="POST" action="/signup">
            <div class="form-group">
                <label for="name">Name:</label>
                <input type="text" class="form-control" placeholder="Enter name" id="name" name="user[name]">
            </div>
            <div class="form-group">
              <label for="email">Email ID:</label>
              <input type="email" class="form-control" placeholder="Enter email" id="email" name="user[username]">
            </div>
            <div class="form-group">
              <label for="pwd">Registration Number:</label>
              <input type="password" class="form-control" placeholder="Enter registration number:" id="pwd" name="user[password]">
            </div>
            <div class="form-group">
              <label>
                <p>Already a User?&nbsp;<a href="/">Login</a></p>
              </label>
            </div>
            <button type="submit" class="btn btn-primary">SignUp</button>
          </form>
    </div>
    <%- include("footer") -%>